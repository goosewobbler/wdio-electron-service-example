{
  "name": "@wdio-electron-service-example/cjs",
  "version": "1.0.0",
  "main": "./dist/main.js",
  "scripts": {
    "build": "rollup -c && cp ./src/index.html ./dist && electron-builder -p never",
    "ci": "pnpm build && pnpm test",
    "ci:logs": "cat ./wdio-logs/wdio-0-0.log && cat ./wdio-logs/wdio-0-1.log && cat ./wdio-logs/wdio-0-2.log && cat ./wdio-logs/wdio-0-3.log",
    "clean": "rm -rf ./dist ./wdio-logs ./node_modules pnpm-lock.yaml",
    "format": "biome format --write .",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false .",
    "lint": "biome check --formatter-enabled=false --linter-enabled=true . && eslint \"test/**/*.{j,t}s\"",
    "lint:fix": "biome check --write --formatter-enabled=false --linter-enabled=true . && eslint \"test/**/*.{j,t}s\" --fix",
    "lint:fix:unsafe": "biome check --write --formatter-enabled=false --linter-enabled=true --unsafe . && eslint \"test/**/*.{j,t}s\" --fix",
    "test": "cross-env DEBUG=wdio-electron-service:* wdio run ./wdio.conf.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@vitest/spy": "^3.2.4",
    "@wdio/cli": "catalog:default",
    "@wdio/globals": "catalog:default",
    "@wdio/local-runner": "catalog:default",
    "@wdio/mocha-framework": "catalog:default",
    "cross-env": "^10.0.0",
    "electron": "catalog:default",
    "electron-builder": "^26.0.12",
    "rollup": "^4.50.1",
    "wdio-electron-service": "catalog:default",
    "webdriverio": "catalog:default"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "asar": true,
    "appId": "com.wdio-electron-service-example-cjs.demo",
    "copyright": "goosewobbler",
    "productName": "wdio-electron-service-example-cjs",
    "files": ["./dist/*"],
    "linux": {
      "executableName": "wdio-electron-service-example-cjs",
      "category": "Utility",
      "target": ["AppImage"]
    }
  }
}
