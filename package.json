{
  "name": "wdio-electron-service-example",
  "version": "1.0.0",
  "main": "./dist/main.js",
  "scripts": {
    "build": "pnpm clean:dist && webpack && cross-env cp ./src/index.html ./dist && electron-builder -p never",
    "ci": "pnpm build && pnpm test && pnpm lint",
    "clean": "pnpm clean:dist && cross-env rm -rf ./node_modules ./all-logs",
    "clean:dist": "cross-env rm -rf ./dist && cross-env mkdir -p ./dist",
    "format": "prettier --write \"**/*.{j,t}s\"",
    "lint": "eslint \"**/*.{j,t}s\"",
    "prepare": "husky install",
    "test": "pnpx wdio wdio.conf.js"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.13.0",
    "@testing-library/webdriverio": "^3.0.5",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@wdio/cli": "^7.19.3",
    "@wdio/local-runner": "^7.19.3",
    "@wdio/mocha-framework": "^7.19.3",
    "cross-env": "^7.0.3",
    "electron": "^19.0.0",
    "electron-builder": "^22.14.13",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-base-typescript": "^1.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-wdio": "^7.19.0",
    "expect-webdriverio": "^3.2.1",
    "global-jsdom": "^8.4.0",
    "husky": "^7.0.4",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "wdio-electron-service": "^3.0.1",
    "webdriverio": "^7.19.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix"
    ],
    "**/*.{yml,json,md,ts,js}": [
      "prettier --write"
    ]
  },
  "build": {
    "asar": true,
    "appId": "com.wdio-electron-service-example.demo",
    "copyright": "goosewobbler",
    "productName": "wdio-electron-service-example",
    "files": [
      "./dist/*"
    ],
    "linux": {
      "executableName": "wdio-electron-service-example",
      "category": "Utility",
      "target": [
        "AppImage"
      ]
    }
  }
}
